pipeline {
    agent any

    environment {
        ROBOT_PATH = './tests'  // ที่เก็บไฟล์ทดสอบ
        RESULTS_PATH = './results'  // เก็บผลลัพธ์
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/xEXCEEDx/SwagLab-Test.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    sh 'pip install -r requirements.txt'
                    sh 'pip install robotframework robotframework-seleniumlibrary'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    sh 'robot --outputdir ${RESULTS_PATH} ${ROBOT_PATH}/*.robot'
                }
            }
        }

        stage('Publish Results') {
            steps {
                junit '**/results/output.xml'
                publishHTML(target: [
                    reportDir: 'results',
                    reportFiles: 'report.html',
                    reportName: 'Robot Test Report'
                ])
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            echo '✅ Tests Passed!'
        }
        failure {
            echo '❌ Tests Failed!'
        }
    }
}
